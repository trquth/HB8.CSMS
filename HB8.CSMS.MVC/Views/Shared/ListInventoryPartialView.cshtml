@model  HB8.CSMS.MVC.Models.Paging.PagedData<HB8.CSMS.MVC.Models.Inventory.InventoryModel>
<div class="panel panel-heading">
    <div class="panel panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th >                       
                    </th>
                    <th class="text-center">
                        <h5>Tên sản phẩm</h5>
                    </th>
                    <th class="text-center">

                        <h5>Đơn vị tính</h5>

                    </th>
                    <th class="text-center">

                        <h5>Số lượng nhập</h5>

                    </th>
                    <th class="text-center">

                        <h5>Gía bán sĩ</h5>

                    </th>
                    <th class="text-center">

                        <h5>Gía bán lẻ</h5>

                    </th>                                 
                    <th>

                        <h5></h5>

                    </th>
                    <th>

                        <h5></h5>

                    </th>

                </tr>
            </thead>
            <tbody class="text-center">
                @{
                    foreach (var item in Model.Data)
                    {
                        <tr>
                            <td class="text-center itemIdClass">
                                <input id="ID" type="hidden" value="@item.InvtID" name="item.ID">
                            </td>                          
                            <td class="text-center">

                                <h5>@item.InvtName</h5>

                            </td>
                            <td class="text-center">

                                <small>@item.UnitName_L</small>

                            </td>
                            <td class="text-center">

                                <h5>@item.QtyStock</h5>

                            </td>
                            <td class="text-center">

                                <h5>@item.SalePrice_T</h5>

                            </td>
                            <td class="text-center">

                                <h5>@item.SalePrice_L</h5>

                            </td>
                            <td class="text-center"></td>
                            <td class="text-center">

                                <input type="button" value="Sửa" class="buttonEdit btn btn-default" />

                            </td>
                        </tr>
                    }
                }

            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3">

                        <ul class="pagination">
                            @for (int i = 1; i <= Model.NumberOfPages; i++)
                            {
                                if (i == Model.CurrentPage)
                                {
                                    <li class="active"><a class="currentpage" href="#" onclick="return false;" value="@i">@i<span class="sr-only"></span></a></li>

                                }
                                else
                                {

                                    <li class=""><a class="page-number" href="javascript:;">@i<span class="sr-only"></span></a></li>
                                }
                            }
                        </ul>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<script src="~/MyjQ/Index.js" type="text/javascript"></script>