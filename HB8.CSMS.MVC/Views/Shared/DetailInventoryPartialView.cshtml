@model  HB8.CSMS.MVC.Models.Inventory.InventoryModel
<div class="col-lg-12">

</div>
<div class="col-lg-2">
    <div id="imagePreview">
        @{
            if (Model.Image == null)
            {
                <img class="img-rounded fa fa-file-image-o centre-block" id="changeimage" height="120" width="120" src="~/Images/no_image.jpg" />
            }
            else
            {
                <img class="img-rounded fa fa-file-image-o centre-block" id="changeimage" height="120" width="120" src="~/Images/InventoryImages/@Model.Image" />
            }
        }

    </div>
    <br />
</div>
<div class="col-lg-10 ">
    <div class="col-lg-12">
        <input type="hidden" id="id" value="@Model.InvtID" />
        <h3 class="text-center">@Model.InvtName</h3>
    </div>
    <div class="col-lg-12">
        <h4 class="text-center">@Model.ClassName</h4>
    </div>
</div>
<div class="col-lg-12">
    <ul class="nav nav-tabs" data-tabs="tabs">
        <li class="active"><a data-toggle="tab" href="#description"><h5>Thông tin</h5> </a></li>
        <li class=""><a data-toggle="tab" href="#second"><h5>Hàng tồn kho</h5> </a></li>
        <li class=""><a data-toggle="tab" href="#third"><h5>Thuế</h5> </a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="description">
            <div class="col-lg-12">
                <br />
                <h3>Thông tin chung</h3>
                <div class="col-lg-2">Đơn vị tính:</div>
                <div class="col-lg-10">
                    <p>@Model.UnitName_T</p>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="col-lg-2">Số lượng:</div>
                <div class="col-lg-10">
                    @Model.UnitRate
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2">Gía bán sĩ</div>
                    <div class="col-lg-10">
                        @Model.SalePrice_T
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="col-lg-2">Đơn vị tính lẻ:</div>
                <div class="col-lg-10">
                    @Model.UnitName_L
                </div>
            </div>
            <div class="col-lg-12">
                <div class=" col-lg-2">Gía bán lẻ:</div>
                <div class="col-lg-10">
                    @Model.SalePrice_L
                </div>
            </div>
            <div class="col-lg-12">
                <div class="col-lg-2">Mô tả sản phẩm:</div>
                @Model.Description
            </div>
        </div>
        <div class="tab-pane " id="second">
            <div class="col-lg-12 ">
                <h3>Tình trạng</h3>
                <div class="form-group">
                    <br />
                    <div class=" col-lg-2">Trạng thái:</div>
                    <div class="col-lg-10">
                        @Model.StInvetoryName
                    </div>
                </div>
                <div class="form-group">
                    <div class=" col-lg-2">Quản lí sản phẩm:</div>
                    <div class="col-lg-10">
                        @Model.StaffName
                    </div>
                </div>
                <div class="form-group">
                    <div class=" col-lg-2">Số lượng kiến nhập:</div>
                    <div class="col-lg-10">
                        @Model.QtyStock
                    </div>
                </div>
            </div>

        </div>
        <div class="tab-pane " id="third">
            <div class="col-lg-12 ">
                <h3>Thuế</h3>
                <div class="form-group">
                    <div class=" col-lg-2">Mức thuế:</div>
                    <div class="col-lg-10">
                        @Model.SlsTax
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>