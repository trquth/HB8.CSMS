@model HB8.CSMS.MVC.Models.Customer.CustomerModel
<div class="panel-body my-background">
    <div class="partialViewWrapper">
        <div class="col-lg-12 background-partial">
            <br />
            <div class="col-lg-2  ">
                <div id="imagePreview">
                    @{
                        if (Model.Image == null)
                        {
                            <img class="img-rounded fa fa-file-image-o centre-block" id="changeimage" height="120" width="120" src="~/Images/no_image.jpg" />
                        }
                        else
                        {
                            <img class="img-rounded fa fa-file-image-o centre-block" id="changeimage" height="120" width="120" src="~/Images/Customer/@Model.Image" />
                        }
                    }
                </div>
                <br />
            </div>
            <div class="col-lg-10 ">
                <div class="form-group">
                    <input type="hidden" id="id" value="@Model.CustID" />
                    <label class="control-label col-lg-3 add-line">Tên khách hàng:</label>
                    <div class="col-lg-9">
                        <p class="text-center">@Model.CustName</p>
                    </div>
                </div>                        
            </div>
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-lg-3 add-line">Địa chỉ:</label>
                        <div class="col-lg-9">
                            <p class="text-center">@Model.Address</p>                          
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-lg-4 add-line">Số điện thoại:</label>
                        <div class="col-lg-8">
                            <p class="text-center">@Model.Phone</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-4 add-line">Email:</label>
                        <div class="col-lg-8">
                            <p class="text-center">@Model.Email</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <ul class="nav nav-tabs" data-tabs="tabs">
                    <li class="active"><a data-toggle="tab" href="#description"><h5>Lưu ý nội bộ</h5> </a></li>
                    <li class=""><a data-toggle="tab" href="#second"><h5>Mua hàng và bán hàng</h5> </a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="description">
                        <div class="col-lg-12">
                            <br />
                            <div class="form-group">
                                <label class="control-label col-lg-3 add-line">Lưu ý:</label>
                                <div class="col-lg-9">
                                    @if (Model.Description == null)
                                    {
                                        <p class="text-center">Hiện không có ghi chú</p>
                                    }
                                    else
                                    {
                                        <p class="text-center">@Model.Description</p>
                                    }
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane " id="second">
                        <br />
                        <div class="col-lg-12 ">
                            <div class="col-lg-6">                              
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label col-lg-4 add-line">Trạng thái:</label>
                                    <div class="col-lg-8">
                                        <p class="text-center">@Model.StatusName</p>
                                    </div>
                                </div>                             
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


