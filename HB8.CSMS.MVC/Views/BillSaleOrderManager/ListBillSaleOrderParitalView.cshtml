@model  HB8.CSMS.MVC.Models.Paging.PagedData<HB8.CSMS.MVC.Models.BillSaleOrder.BillSaleOrderModel>
<div class="col-lg-12">
    <table class="table table-striped ">
        <thead>
            <tr>
                <th class="text-center">
                    <h4>Tên khách hàng</h4>
                </th>
                <th class="text-center">

                    <h5>Ngày lập hóa đơn</h5>
                </th>
                <th class="text-center">

                    <h5>Ngày thanh toán hóa đơn</h5>

                </th>
                <th class="text-center">
                    <h5>Số tiền</h5>
                </th>
                <th class="text-center">
                    <h5>Thuế</h5>
                </th>
                <th class="text-center">
                    <h5>Tổng tiền</h5>
                </th>
                <th class="text-center">
                    <h5>Trạng thái</h5>
                </th>
            </tr>
        </thead>
        <tbody class="text-center" id="tableDetailBill">
            @{
                foreach (var item in Model.Data)
                {
                    <tr>
                        <td class="text-center itemIdClass">
                            <input class="ID" type="hidden" value="@item.SOrderNo" name="">
                        </td>
                        <td class="text-center">

                            <p>@item.CustName</p>

                        </td>
                        <td class="text-center">

                            <p>@item.OrderDate </p>

                        </td>
                        <td class="text-center">

                            <p>@item.OverdueDate</p>

                        </td>
                        <td class="text-center">

                            <p>@item.TotalAmt</p>

                        </td>
                        <td class="text-center">

                            <p>@item.TaxAmt</p>

                        </td>
                        <td class="text-center">

                            <p>@(item.TotalAmt * (1 - item.TaxAmt / 100))</p>

                        </td>
                        <td class="text-center">

                            <p>@item.TypeName</p>

                        </td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="7">
                    <ul class="pagination">
                        @for (int i = 1; i <= Model.NumberOfPages; i++)
                        {
                            if (i == Model.CurrentPage)
                            {
                                <li class="active"><a class="currentpage" href="#" onclick="return false;" value="@i">@i<span class="sr-only"></span></a></li>

                            }
                            else
                            {

                                <li class=""><a class="page-numberForBill" href="javascript:;">@i<span class="sr-only"></span></a></li>
                            }
                        }
                    </ul>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
<script src="~/MyjQ/Index.js"></script>