@model HB8.CSMS.MVC.Models.BillSaleOrder.BillSaleOrderModel
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-6">
            <div class="form-group">
                <label class="control-label col-lg-3">Khách hàng:</label>
                <div class="col-lg-9">
                    <input type="hidden" id="id" value="@Model.SOrderNo" />
                   <h4>@Model.CustName</h4>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-3">Người bán hàng:</label>
                <div class="col-lg-9">
                    <h4>@Model.StaffName</h4>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-3">Chiếc khấu cho hóa đơn:</label>
                <div class="col-lg-9">
                    <p>@Model.Debt</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-3">Mô tả:</label>
                <div class="col-lg-9">
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label class="control-label col-lg-3">Ngày tạo:</label>
                <div class="col-lg-9">
                  <p>@Model.OrderDate</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-3">Ngày đến hạn:</label>
                <div class="col-lg-9">
                    <p>@Model.OverdueDate</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <ul class="nav nav-tabs" data-tabs="tabs">
            <li class="active"><a data-toggle="tab" href="#description"><h5>Chi tiết hóa đơn</h5> </a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="description">
                <br />
                <div class="col-lg-12">
                    <table class="table table-striped ">
                        <thead>
                            <tr>
                                <th class="text-center"><h5>STT</h5></th>
                                <th class="text-center ">
                                    <h5>Tên sản phẩm</h5>
                                </th>
                                <th class="text-center ">
                                    <h5>Số lượng</h5>
                                </th>
                                <th class="text-center">
                                    <h5>Đơn vị tính</h5>
                                </th>
                                <th class="text-center ">
                                    <h5>Đơn giá</h5>
                                </th>
                                <th class="text-center ">
                                    <h5>Chiết khấu</h5>
                                </th>
                                <th class="text-center">
                                    <h5>Thuế</h5>
                                </th>
                                <th class="text-center ">
                                    <h5>Số tiền</h5>
                                </th>                              
                            </tr>
                        </thead>
                        <tbody class="text-center" id="tableInventory">
                           
                        </tbody>
                    </table>

                </div>
                <div class="col-lg-12">
                    <div class="col-lg-12">
                        <div class="col-lg-10 text-right">Số tiền:</div>
                        <div class="col-lg-2">0đ</div>
                    </div>
                    <div class="col-lg-12">
                        <div class="col-lg-10 text-right">Thuế:</div>
                        <div class="col-lg-2">0đ</div>
                    </div>
                    <div class="col-lg-12">
                        <div class="col-lg-8"></div>
                        <div class="col-lg-4"><hr /></div>
                    </div>
                    <div class="col-lg-12">
                        <div class="col-lg-10 text-right"><strong>Tổng cộng:</strong></div>
                        <div class="col-lg-2">0đ</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>