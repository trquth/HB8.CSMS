@model  HB8.CSMS.MVC.Models.Paging.PagedData<HB8.CSMS.MVC.Models.Staff.StaffModel>
<div class="panel panel-heading">
    <div class="panel panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="text-center">

                        <h5><b>Hình ảnh</b></h5>

                    </th>
                    <th class="text-center">

                        <h5><b>Tên nhân viên</b></h5>

                    </th>
                    <th class="text-center">

                        <h5><b>Chức vụ</b></h5>

                    </th>
                    <th class="text-center">

                        <h5><b>Địa chỉ</b></h5>

                    </th>
                    <th class="text-center">

                        <h5><b>Số điện thoại</b></h5>

                    </th>
                    <th class="text-center">
                        <h5><b>Email</b></h5>
                    </th>                
                </tr>
            </thead>
            <tbody class="text-center" id="tableStaff">
                @{
                    foreach (var item in Model.Data)
                    {
                        <tr>
                            <td class="text-center itemIdClass">
                                <input id="ID" type="hidden" value="@item.ID" name="item.ID">
                            </td>
                            <td class="text-center">
                                @if (item.Image == null)
                                {
                                    <img src="~/Images/no_image.jpg" class="img-rounded" width="50" />
                                }
                                else
                                {
                                    <h5><img src="~/Images/StaffImages/@item.Image" alt="" class="img-rounded" width="50"></h5>
                                }

                            </td>
                            <td class="text-center">

                                <h5>@item.StaffName</h5>

                            </td>
                            <td class="text-center">

                                <small>@item.UserName</small>

                            </td>
                            <td class="text-center">

                                <h5>@item.Address</h5>

                            </td>
                            <td class="text-center">

                                <h5>@item.NumberPhone</h5>

                            </td>
                            <td class="text-center">

                                <h5>@item.Email</h5>

                            </td>
                        </tr>
                    }
                }

            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6">

                        <ul class="pagination">
                            @for (int i = 1; i <= Model.NumberOfPages; i++)
                            {
                                if (i == Model.CurrentPage)
                                {
                                    <li class="active"><a class="currentpage" href="#" onclick="return false;" value="@i">@i<span class="sr-only"></span></a></li>

                                }
                                else
                                {

                                    <li class=""><a class="page-number" href="javascript:;">@i<span class="sr-only"></span></a></li>
                                }
                            }
                        </ul>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<script src="~/MyjQ/Index.js" type="text/javascript"></script>