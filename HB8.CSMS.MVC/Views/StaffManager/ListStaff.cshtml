@model IEnumerable<HB8.CSMS.MVC.Models.Staff.StaffModel>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "ListStaff";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row">
    <div class="col-md-12"><input type="button" value="Thêm nhân viên mới" class="buttonCreate btn btn-default" /></div>
    <div class="col-md-12">      
        <div class="panel panel-heading">
            <div class="panel panel-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="text-center">

                                <h5>Hình ảnh</h5>

                            </th>
                            <th class="text-center">

                                <h5>Tên nhân viên</h5>

                            </th>
                            <th class="text-center">

                                <h5>Chức vụ</h5>

                            </th>
                            <th class="text-center">

                                <h5>Địa chỉ</h5>

                            </th>
                            <th class="text-center">

                                <h5>Số điện thoại</h5>

                            </th>
                            <th class="text-center">

                                <h5>Email</h5>

                            </th>
                            <th>

                                <h5></h5>

                            </th>
                            <th>

                                <h5></h5>

                            </th>

                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @{
                            var items = ViewBag.OnePageOfStaffs;
                            foreach (var item in items)
                            {
                                <tr>
                                    <td class="text-center itemIdClass">
                                        <input id="ID" type="hidden" value="@item.ID" name="item.ID">
                                    </td>
                                    <td class="text-center">

                                        <h5><img src="~/Images/@item.Image" alt="" class="img-rounded" width="80px"></h5>

                                    </td>
                                    <td class="text-center">

                                        <h5>@item.StaffName</h5>

                                    </td>
                                    <td class="text-center">

                                        <small>@item.UserName</small>

                                    </td>
                                    <td class="text-center">

                                        <h5>@item.Address</h5>

                                    </td>
                                    <td class="text-center">

                                        <h5>@item.NumberPhone</h5>

                                    </td>
                                    <td class="text-center">

                                        <h5>@item.Email</h5>

                                    </td>
                                    <td class="text-center"></td>
                                    <td class="text-center">

                                        <input type="button" value="Sửa" class="buttonEdit btn btn-default" />

                                    </td>
                                    <td class="text-center">
                                        <input type="button" value="Xóa" class="buttonDelete btn btn-default" />
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            <div id="showspinner"></div>
            <div id="createForm"></div>
            <div id="editForm"></div>
            <div id="deleteForm">
                <div class="panel panel-warning">
                    <div class="panel-heading"> <span><i class="fa fa-exclamation-triangle fa-2x"></i>  <b>Xóa thông tin nhân viên</b> </span> </div>
                    <div class="alert alert-error " style="text-align: center" >
                        <strong>Cảnh báo!</strong> <p>Bạn có chắc là sẽ xóa thông tin nhân viên này</p>
                        <br />
                        <input type="button" value="Đồng ý" class="okDelete btn btn-danger right" />
                        <input type="button" value="Thoát" class="buttonCloseDelete btn btn-primary right " />
                    </div>
                </div>
            </div>
            <div id="showspinnerForm">
                <center><i class='fa fa-spinner fa-spin fa-5x ' id='spinner'></i></center>
            </div>
            <div class="panel panel-footer">
                @Html.PagedListPager((IPagedList)ViewBag.OnePageOfStaffs, page => Url.Action("ListStaff", new { page = page }))
            </div>
        </div>
    </div>

</div>
<script src="~/MyjQ/Index.js"></script>
<script src="~/Scripts/jquery-ui-1.11.4.js"></script>